<form class="form-horizontal" {{action save on="submit"}}>
	<legend>Beverage</legend>
	{{#view Ember.View}}
		{{#view App.ImageUploadView name="image"}}
			<div class="controls">
				{{view view.previewImageView width="200" height="100" srcBinding="image" class="img-polaroid"}}
			</div>
			<div {{bindAttr class=":controls :file-wrapper isEditingDisabled:transparent:active"}}>
				{{view view.fileField }}
				<span class="btn-spacing btn btn-small">Choose an Image</span>
			</div>
		{{/view}}
	{{/view}}
  <div class="control-group">
    <label class="control-label" for="name-field">
			<strong>Name</strong>
		</label>
    <div class="controls">
	    {{view Ember.TextField valueBinding="name" id="name-field" disabledBinding="isEditingDisabled"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label strong" for="location-field">
			<strong>ABV</strong>
		</label>
    <div class="controls">
			{{view Ember.TextField valueBinding="abv" id="ibu-field" disabledBinding="isEditingDisabled"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="established-field">
			<strong>IBU</strong>
		</label>
    <div class="controls">
	    {{view Ember.TextField valueBinding="ibu" id="abv-field" disabledBinding="isEditingDisabled"}}
    </div>
  </div>
  <p>
		{{#if isEditing}}
    	<button type="submit" class="btn btn-primary">Save</button>
		{{else}}
			<button {{action "edit" on="click"}} class="btn btn-primary">Edit</button>
		{{/if}}
  </p>
	{{outlet beverages}}
</form>
